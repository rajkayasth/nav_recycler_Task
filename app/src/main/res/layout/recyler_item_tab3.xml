<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        app:cardBackgroundColor="#F1F1F1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >


        <ImageView
            android:id="@+id/newsImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/newsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/newsImage"
            android:maxLines="2"
            android:ems="10"
            android:layout_marginTop="8dp"
            style="@style/TextAppearance.AppCompat.Headline"
            android:text="TextView"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/newsAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/newsTitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:maxLines="2"
            android:text="Author"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/newsDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/newsAuthor"
            style="@style/TextAppearance.AppCompat.Body1"
            android:maxLines="2"
            android:text="TextView"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/newsPublishAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/newsDescription"
            style="@style/TextAppearance.AppCompat.Body1"
            android:maxLines="2"
            android:text="TextView"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/newConetnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/newsPublishAt"
            style="@style/TextAppearance.AppCompat.Body1"
            android:maxLines="2"
            android:text="TextView"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>